<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7DB4B4B4"
                android:endColor="@android:color/transparent"
                android:angle="90" >
            </gradient>
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="3dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                >
            </padding>
            <solid android:color="#FDFCFC"/>
            <stroke
                android:width="1dp"
                android:color="#3D3D3D" />
        </shape>
    </item>
</layer-list>